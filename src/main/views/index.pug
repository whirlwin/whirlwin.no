include ./layout

block content
  div.section.no-pad-bot
    div.container
      div.row
        div.col.s12.m8.l8
          each minimalPost in minimalPosts
            div
              a(href=minimalPost.link)
                h4.green-text=minimalPost.title
                img(src=minimalPost.thumbnail, alt='a')
              p Published #{minimalPost.pubDate}
              p Tags: #{minimalPost.categories.join(", ")}
            hr
        div.col.s12.m4.offset-l2.l2
          div.card
            div.card-image
              img(src="/assets/custom/images/profile-picture-2018.jpg", alt="Me")
            div.card-content
              span.card-title Øyvind Ødegård
              div
                span DevOps Engineer
                a(href="https://www.dfindconsulting.no/")  @ Dfind Consulting
          div
          div.card
            div.card-content
              div.card-title
                h5 Bookshelf
              div
                a(href="https://www.amazon.com/DevOps-Handbook-World-Class-Reliability-Organizations/dp/1942788002")
                  img.responsive-img(src="/assets/vendor/image/devops-handbook.jpg", alt="DevOps Handbook")
              div
                a(href="https://www.amazon.com/Continuous-Delivery-Deployment-Automation-Addison-Wesley/dp/0321601912")
                  img.responsive-img(src="/assets/vendor/image/continuous-delivery.jpg", alt="Continuous delivery")
              div
                a(href="https://www.amazon.com/Release-Production-Ready-Software-Pragmatic-Programmers/dp/0978739213")
                  img.responsive-img(src="/assets/vendor/image/release-it.jpg", alt="Release It!")

